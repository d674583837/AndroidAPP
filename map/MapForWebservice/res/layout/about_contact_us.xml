        android:gravity="center_vertical"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/ic_phone"
            android:text="电子邮件："
            android:textColor="@color/secondtext" />

